<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.mytestnotification">

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTestNotification">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SimpleNotification"
            android:launchMode="singleTask"/>

        <activity android:name=".GroupChannelNotification"
            android:launchMode="singleTask"/>

        <activity android:name=".DeviceInfoActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".PopupActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".OpenPlayStoreActivity"
            android:launchMode="singleTask"/>

        <service
            android:name=".MyNotificationListener"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>


    </application>

</manifest>
