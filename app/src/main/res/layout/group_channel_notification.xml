<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/id_const_layout"
    android:layout_marginStart="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ImgNotificationSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:onClick="opnNotificationSettings"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/recycler_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@+id/ImgNotificationSettings"
        app:layout_constraintBottom_toTopOf="@+id/throttle_strategy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="520dp"
        app:layout_constraintHeight_min="320dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_ga_c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "GROUP_A, CHANNEL_1"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_ga_c1_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text = "total active notifs: 99"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_list_ga_c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:scrollbars="vertical"
                    tools:itemCount="2"
                    tools:listitem="@layout/group_channel_notification_item">
                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_ga_c2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "GROUP_A, CHANNEL_2"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_ga_c2_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text = "total active notifs: 99"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_list_ga_c2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:scrollbars="vertical"

                    tools:itemCount="2"
                    tools:listitem="@layout/group_channel_notification_item">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_gb_c3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "GROUP_B, CHANNEL_3"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_gb_c3_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text = "total active notifs: 99"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_list_gb_c3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:scrollbars="vertical"

                    tools:itemCount="12"
                    tools:listitem="@layout/group_channel_notification_item">
                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_gb_c4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "GROUP_B, CHANNEL_4"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txt_gb_c4_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text = "total active notifs: 99"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_list_gb_c4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:scrollbars="vertical"

                    tools:itemCount="2"
                    tools:listitem="@layout/group_channel_notification_item">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/throttle_strategy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_list_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/throttle_strategy_group_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectanglebg"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/strategy_tp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    tools:background="#00ff00">

                    <TextView
                        android:id="@+id/total_post_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="How many round to send (4 pushes per round):"
                        tools:background="#00ffff" />

                    <EditText
                        android:id="@+id/total_post_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="20"
                        android:inputType="number"
                        tools:background="#00ffff"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/strategy_tp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp"
                    tools:background="#00ff00">
                    <TextView
                        android:id="@+id/throttle_strategy_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="8dp"
                        android:text="Max active notification count (if purge/replace):"
                        tools:background="#00ffff"/>
                    <EditText
                        android:id="@+id/max_active_notification_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="number"
                        android:text="6"
                        tools:background="#00ffff"
                        />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/typeSelectorRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="fill_horizontal"
                    android:orientation="horizontal"
                    tools:background="#ff00ff">

                    <RadioButton
                        android:id="@+id/strategy_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:checked="true"
                        android:text="None" />

                    <RadioButton
                        android:id="@+id/strategy_purge"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Purge oldest" />

                    <RadioButton
                        android:id="@+id/strategy_replace"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Replace oldest" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/pureModeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="fill_horizontal"
                    android:orientation="horizontal"
                    tools:background="#ff00ff"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <RadioButton
                        android:id="@+id/pure_order_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:checked="true"
                        android:text="Purge the oldest" />

                    <RadioButton
                        android:id="@+id/pure_oder_by_channel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="by channel order 1,2,3,4" />

                </RadioGroup>
            </LinearLayout>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Throttle strategy:"
                android:textStyle="bold"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/start_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start notify - 2 sec"
                android:onClick="startNotify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typeSelectorRadioGroup" />
            <EditText
                android:id="@+id/interval"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"
                android:hint="interval in sec"
                android:inputType="number"
                android:text="2"
                />
        </LinearLayout>

<!--        -->

<!--        <Button-->
<!--            android:id="@+id/start_notify"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Start notify - 2 sec"-->
<!--            android:onClick="startNotify"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/typeSelectorRadioGroup" />-->

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
